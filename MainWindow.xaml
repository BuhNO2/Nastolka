<Window x:Class="Nastol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nastol"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    
    <StackPanel HorizontalAlignment="Stretch" >
         <Label Content="Авторизация" FontSize="34" Background="Black" Foreground="White"  Margin="0,0,0,50" HorizontalAlignment="Stretch" FontWeight="Bold"/>
        <StackPanel HorizontalAlignment="Center" Margin="20,0" Width="300" >
           <Label Content="Логин" FontSize="12"/>
            <TextBox x:Name="LoginUser"  Padding="20,5,20,5" Margin="0,0,0,10"/>
            <Label Content="Пароль" FontSize="12"/>
            <PasswordBox PasswordChar="*" x:Name="PassUser"  Padding="20,5,20,5" Margin="0,0,0,20"/>
            <Button Content="Вход" Padding="20,5,20,5" Margin="15,5" HorizontalAlignment="Center" Foreground="White" Background="Black"  Height="31" Click="AuthClick" /> 
        </StackPanel>
  
    </StackPanel>
</Window>
